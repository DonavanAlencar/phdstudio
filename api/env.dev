# ============================================
# CONFIGURAÇÃO DO BANCO DE DADOS MYSQL (WordPress Docker)
# ============================================

# Host do MySQL (nome do container Docker)
WP_DB_HOST=wp_db

# Credenciais do MySQL (do container wp_db)
WP_DB_USER=wp_user
WP_DB_PASSWORD=WpUser@2024!Strong#Pass
WP_DB_NAME=wordpress_db
WP_TABLE_PREFIX=wp_

# SSL para conexão MySQL (true/false)
WP_DB_SSL=false

# ============================================
# URL BASE DO WORDPRESS
# ============================================
WP_URL=http://localhost:8080

# ============================================
# SEGURANÇA - API KEY
# ============================================
PHD_API_KEY=local-api-key

# ============================================
# CORS - ORIGENS PERMITIDAS
# ============================================
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:5173

# ============================================
# CONFIGURAÇÃO DO SERVIDOR
# ============================================
API_PORT=3001
NODE_ENV=development

# ============================================
# POSTGRES (CRM)
# ============================================
CRM_DB_HOST=phd-crm-db
CRM_DB_PORT=5432
CRM_DB_USER=phd_crm_user
