version: '3.8'

services:
  phdstudio:
    build:
      context: .
      dockerfile: Dockerfile
      args:
        - GEMINI_API_KEY=${GEMINI_API_KEY:-}
        - VITE_EMAILJS_SERVICE_ID=${VITE_EMAILJS_SERVICE_ID:-}
        - VITE_EMAILJS_TEMPLATE_ID=${VITE_EMAILJS_TEMPLATE_ID:-}
        - VITE_EMAILJS_PUBLIC_KEY=${VITE_EMAILJS_PUBLIC_KEY:-}
        - VITE_RECIPIENT_EMAIL=${VITE_RECIPIENT_EMAIL:-}
    container_name: phdstudio-app
    # Porta exposta para o Easypanel/Traefik rotear
    expose:
      - "80"
    restart: unless-stopped
    environment:
      - NODE_ENV=production
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
        labels: "production"
    labels:
      # Labels do Traefik para phdstudio.com.br (quando Traefik estiver funcionando)
      - "traefik.enable=true"
      - "traefik.http.routers.phdstudio.rule=Host(`phdstudio.com.br`)"
      - "traefik.http.routers.phdstudio.entrypoints=https"
      - "traefik.http.routers.phdstudio.tls.certresolver=letsencrypt"
      - "traefik.http.routers.phdstudio.priority=100"
      - "traefik.http.services.phdstudio.loadbalancer.server.port=80"
      # Redirecionar HTTP para HTTPS
      - "traefik.http.routers.phdstudio-http.rule=Host(`phdstudio.com.br`)"
      - "traefik.http.routers.phdstudio-http.entrypoints=http"
      - "traefik.http.routers.phdstudio-http.priority=100"
      - "traefik.http.routers.phdstudio-http.middlewares=redirect-to-https"
      - "traefik.http.middlewares.redirect-to-https.redirectscheme.scheme=https"
      - "traefik.http.middlewares.redirect-to-https.redirectscheme.permanent=true"
      # Labels para Easypanel (se necess√°rio)
      - "easypanel.domain=phdstudio.com.br"
      - "easypanel.port=80"
    networks:
      - n8n_default

networks:
  n8n_default:
    external: true

